<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <a href="/courses/{{slug}}">
                <div class="card card-course-item">
                    <img variant="top" src="{{image}}" alt="{{name}}" />
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">
                            {{description}}
                        </p>
                        <button class="btn btn-primary">Go somewhere</button>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>